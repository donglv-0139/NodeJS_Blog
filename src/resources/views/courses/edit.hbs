<div class="mt-4 container">
    <h3>Chỉnh sửa khóa học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" value="{{course.name}}" class="form-control" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả khóa học</label>
            <textarea class="form-control" name="description">{{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">URL ảnh</label>
            <input type="text" value="{{course.image}}" class="form-control" name="image">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">URL khóa học</label>
            <input type="text" value="{{course.videoId}}" class="form-control" name="videoId">
        </div>

        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>