<div class="mt-4 container">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/courses/store">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả khóa học</label>
            <input type="text" class="form-control" name="description">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Thêm URL ảnh</label>
            <input type="text" class="form-control" name="image">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">URL khóa học</label>
            <input type="text" class="form-control" name="videoId">
        </div>

        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>